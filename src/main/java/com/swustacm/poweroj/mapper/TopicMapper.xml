<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swustacm.poweroj.mapper.TopicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.swustacm.poweroj.topic.entity.Topic">
        <id column="id" property="id" />
        <result column="uid" property="uid" />
        <result column="pid" property="pid" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="atime" property="atime" />
        <result column="ctime" property="ctime" />
        <result column="mtime" property="mtime" />
        <result column="status" property="status" />
        <result column="view" property="view" />
        <result column="threadId" property="threadId" />
        <result column="parentId" property="parentId" />
        <result column="orderNum" property="orderNum" />
    </resultMap>
    <select id="index" resultType="com.swustacm.poweroj.topic.entity.Topic">
    SELECT
	    topic.*,
	    FROM_UNIXTIME( topic.ctime, '%Y-%m-%d %H:%i:%s' ) AS formedtime,
        USER.NAME as name
    FROM
	    topic
	    LEFT JOIN USER ON topic.uid = user.uid
	    <if test="sql!=null">
            ${sql}
        </if>
        <if test="sql==null">
            ${sql}
        </if>
    order by id desc
    </select>
    <select id="comment" resultType="com.swustacm.poweroj.topic.entity.Topic">
    SELECT
	    topic.*,
	    FROM_UNIXTIME( topic.ctime, '%Y-%m-%d %H:%i:%s' ) AS formedtime,
	    USER.NAME as name
    FROM
	    topic
	    LEFT JOIN USER ON topic.uid = USER.uid
    WHERE
	    topic.threadID = #{threadId}
	ORDER BY
	    topic.id
    </select>
    <select id="getAllCommentByThreadId" resultType="com.swustacm.poweroj.topic.entity.Topic">
        select * from topic where topic.threadId = #{threadId}
    </select>
</mapper>
